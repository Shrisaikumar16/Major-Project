<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <!-- offset 2 means left k kcu space dena ho toh -->
    <div class="col-8 offset-2"> 

        <br><br>

        <h3>Create new listing</h3>
        <form 
            method="POST" 
            action="/listings" 
            class="needs-validation" 
            novalidate 
            enctype="multipart/form-data">  
        
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input 
              name="listing[title]" 
              placeholder="Enter a catchy title" 
              type="text" 
              class="form-control"
              required           
              />
              <div class="valid-feedback">Title looks good</div>
              <div class="invalid-feedback">Give a valid title</div>

        </div>
            
        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea 
            name="listing[description]" 
            placeholder="enter description"
            class="form-control"
            required
            ></textarea>
            <div class="invalid-feedback">Please enter a short description</div>
        </div>
        
        <div class="mb-3">
            <lable for="image" class="form-label">Upload listing Image</lable>
            <input 
            name="listing[image]" 
            type="file" 
            class="form-control"
            
            />
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <lable for="price" class="form-label">Price</lable>
                <input  
                name="listing[price]" 
                placeholder="1,200"
                class="form-control"
                required
                />
              <div class="invalid-feedback">Enter a valid price</div>

            </div>
            <div class="mb-3 col-md-8">
                <lable for="country" class="form-label">Country</lable>
                <input  
                name="listing[country]" 
                placeholder="India"
                type="text"
                class="form-control"
                required
                />
              <div class="invalid-feedback">Country should be valid</div>

            </div>
        </div>
            
        <div class="mb-3">
            <lable for="location" class="form-label">Location</lable>
            <input  
            name="listing[location]" 
            placeholder="Mumbai"
            type="text"
            class="form-control"
            required
            />
            <div class="invalid-feedback">Location should be valid</div>
        </div>
        <button class="btn btn-dark mt-3 add-btn">Add</button>
        
        </form>
    </div>

</div>